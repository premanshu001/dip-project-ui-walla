{
  "version": 2,
  "builds": [
    {
      "src": "./main.js",
      "use": "@vercel/node"
    }
  ],

  "routes": [
    {
      "handle": "rescript"
    },
    {
      "src": "/(.*)",
      "dest": "server.js"
    }
  ],
  "public": {
    "includeFiles": [
      "**/*.html",
      "**/*.css",
      "**/*.js",
      "**/*.png",
      "**/*.jpg",
      "**/*.jpeg",
      "**/*.gif",
      "**/*.svg",
      "**/*.ico",
      "**/*.json"
    ],
    "excludeFiles": ["node_modules/**/*"]
  },
  "rewrites": [
    {
      "source": "/public/(.*)",
      "destination": "/public/$1"
    }
  ],
  "headers": [
    {
      "source": "/(.*)",
      "headers": [{ "key": "Access-Control-Allow-Origin", "value": "*" }]
    }
  ],

  "git": {
    "deploymentEnabled": {
      "main": true,
      "dev": true
    }
  }
}
